{
  "name": "faithconnect-backend",
  "version": "1.0.0",
  "description": "FaithConnect Backend Microservices",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "dev:fast": "npm run dev:fast --workspace @faithconnect/auth-service",
    "build:fast": "npm run build:fast --workspace @faithconnect/auth-service",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

